<h1>Submit New Meetup!</h1>

<form id="meetup_form" action="/meetups/new" method="post">
  <label for="meetup_name">Name</label>
  <input class="form_elements" type="text" id="meetup_name" name="meetup_name" value="<%=@meetup_name%>"> <br>

  <label for="meetup_location">Location</label>
  <input class="form_elements" type="text" id="meetup_location" name="meetup_location" value="<%=@meetup_location%>"> <br>

  <label for="meetup_description">Description</label>
  <input class="form_elements" type="text" id="meetup_description" name="meetup_description" value="<%=@meetup_description%>"> <br>

  <button class="form_elements" type="submit">Submit</button>
</form><br><br>

<% if @error %>
  <p><%= @error %></p>
<% end %>

<a href="/meetups">Back to Meetups</a>
